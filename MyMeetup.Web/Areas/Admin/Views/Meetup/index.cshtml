@model MyMeetup.Web.Areas.Admin.Models.AdminMeetupModel
@{
    ViewData["Title"] = "Administration de " + Model.Title;
}
<link href="~/lib/mdbootstrap/css/addons/datatables.min.css" rel="stylesheet">
<div class="card w-100">
    <div class="card-header primary-color white-text">
        @Model.Title
    </div>
    <form method="post" asp-controller="Meetup" asp-action="Index" id="frmMeetup">
        <div class="card-body">
            <h3 class="card-title">@Model.DefaultDateText</h3>
            <div class="form-row">
                <input type="hidden" value="@Model.Id" name="Id" />
                <div class="col-md-6">
                    <div class="md-form">

                        <input type="text" id="MeetupTitle" class="form-control" required name="@nameof(Model.Title)" maxlength="80"
                               value="@Model.Title">
                        <label for="MeetupTitle" class="font-weight-light">Titre</label>

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="meetupVisible" @(Model.IsVisible ? "checked" : "")
                               onchange="$('#meetupIsVisible').val($(this).is(':checked') ? 'true' : 'false' )" />
                        <input type="hidden" value="@(Model.IsVisible.ToString())" id="meetupIsVisible" name="@nameof(Model.IsVisible)" />
                        <label class="custom-control-label" for="meetupVisible">Est Visible</label>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="md-form mt-0">
                        <input type="date" class="form-control" name="@nameof(Model.StartDate)" id="StartDate"
                               value="@Model.StartDate.ToString("yyyy-MM-dd")">
                        <label class="active"  for="StartDate">Date de début</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="md-form mt-0">
                        <input type="date" class="form-control" name="@nameof(Model.EndDate)" id="EndDate"
                               value="@Model.EndDate.ToString("yyyy-MM-dd")">
                        <label class="active"  for="EndDate">Date de fin</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="md-form mt-0">
                        <input type="date" class="form-control" name="@nameof(Model.OpenForRegistrationOn)" id="OpenRegDate"
                               value="@(Model.OpenForRegistrationOn?.ToString("yyyy-MM-dd")??string.Empty)">
                        <label class="active"  for="OpenRegDate">Ouvert Inscription</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                        <label for="PublicDescription">Description publique</label>
                        <textarea name="@nameof(Model.PublicDescription)" id="PublicDescription">@Model.PublicDescription</textarea>
                </div>
            </div>
            <div class="row">
                <div class="col">
                        <label for="RegDescription">Description après enregistrement</label>
                        <textarea name="@nameof(Model.RegisteredDescription)" id="RegDescription">@Model.RegisteredDescription</textarea>
                </div>
            </div>
            <a class="btn btn-primary" onclick="validateForm()">@(Model.Id != 0 ? "Modifier" : "Ajouter")</a>
            @*<a href="#" class="btn btn-secondary">Annuler</a>*@
        </div>
    </form>
</div>
<div class="card w-100">
    <div class="card-header primary-color white-text">
        Participants
    </div>
    <div class="card-body">
        <h3 class="card-title">@Model.Participants.Count inscrit@(Model.Participants.Count > 1 ? "s" : "") </h3>
        <p class="card-text">
            <table class="table table-striped table-bordered" cellspacing="0" id="dtParticipants">
                <thead>
                <th class="th-sm">
                    Id
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
                <th class="th-sm">
                    Nom
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>
                <th class="th-sm">
                    Prénom
                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                </th>

                </thead>
                <tbody>
                    @foreach (var user in Model.Participants)
                    {
                        <tr>
                            <td>@user.Id</td>

                            <td>@user.LastName</td>

                            <td>@user.FirstName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </p>

    </div>
</div>
@section scripts
{
    <script src="~/lib/tinymce/js/tinymce.min.js"></script>

    <script type="text/javascript" src="~/lib/MDBootstrap/js/addons/datatables.min.js"></script>
    <script>
        $(function() {
            $("#dtParticipants").DataTable({
                "language": {
                    "sProcessing":     "Traitement en cours...",
                    "sSearch":         "Rechercher&nbsp;:",
                    "sLengthMenu":     "Afficher _MENU_ &eacute;l&eacute;ments",
                    "sInfo":           "Affichage de l'&eacute;l&eacute;ment _START_ &agrave; _END_ sur _TOTAL_ &eacute;l&eacute;ments",
                    "sInfoEmpty":      "Affichage de l'&eacute;l&eacute;ment 0 &agrave; 0 sur 0 &eacute;l&eacute;ment",
                    "sInfoFiltered":   "(filtr&eacute; de _MAX_ &eacute;l&eacute;ments au total)",
                    "sInfoPostFix":    "",
                    "sLoadingRecords": "Chargement en cours...",
                    "sZeroRecords":    "Aucun &eacute;l&eacute;ment &agrave; afficher",
                    "sEmptyTable":     "Aucune donn&eacute;e disponible dans le tableau",
                    "oPaginate": {
                        "sFirst":      "Premier",
                        "sPrevious":   "Pr&eacute;c&eacute;dent",
                        "sNext":       "Suivant",
                        "sLast":       "Dernier"
                    },
                    "oAria": {
                        "sSortAscending":  ": activer pour trier la colonne par ordre croissant",
                        "sSortDescending": ": activer pour trier la colonne par ordre d&eacute;croissant"
                    },
                    "select": {
                        "rows": {
                            "_": "%d lignes séléctionnées",
                            "0": "Aucune ligne séléctionnée",
                            "1": "1 ligne séléctionnée"
                        }
                    }
                }
            });
            tinymce.init({
                selector: 'textarea',
                language: 'fr_FR',
                height : "250"
            });
        });
        

        function validateForm(id) {
            tinyMCE.triggerSave();
            document.getElementById('frmMeetup').submit();
        }
    </script>
}