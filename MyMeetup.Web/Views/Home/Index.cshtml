@using MyMeetup.Web.Models.Home
@using MyMeetUp.Logic.Models
@model MyMeetup.Web.Models.Home.IndexModel
@{
    ViewData["Title"] = "Rencontres non-scolarisées";
}
<br/>
<div class="text-center">
    <H1>Bonjour Ami-e !</H1>
</div>
<!-- Card -->
<div class="card card-cascade wider reverse">

    <!-- Card image -->
    <div class="view view-cascade overlay">
        <img class="card-img-top" src="~/images/Uploaded/TitreRencontre/@Model.Rencontre.TitleImage" alt="@Model.Rencontre.Title"
             style="width: 400px; height: 300px;margin-left: auto;margin-right: auto;display: block;">
        <a href="#!">
            <div class="mask rgba-white-slight"></div>
        </a>
    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">

        <!-- Title -->
        <h4 class="card-title"><strong>@Model.Rencontre.Title</strong></h4>
        <!-- Subtitle -->
        <h6 class="font-weight-bold indigo-text py-2">@Model.Rencontre.StartDate.ToString("dd MMM yyyy") - @Model.Rencontre.EndDate.ToString("dd MMM yyyy") </h6>
        <!-- Text -->
        <p class="card-text">
            @Model.Rencontre.PublicDescription
        </p>


    </div>

</div>

<div class="row">
    <!-- Card -->
    @for (int i = 0; i < Model.Charter.Count; i++)
    {
        bool newRow = i == 0 || (i % 2 == 0);

        var contenu = Model.Charter[i];
        string hiddenStyle = (i == 0) ? "" : "display:none;";
        var chkId = "Accepte" + i;


        <div class="col-sm-6">
            <div id="@($"divCharte{i}")" class="card text-center" style="height: 300px; @hiddenStyle">
                <div class="card-header success-color white-text">
                    Lis et accepte :
                </div>
                <div class="card-body">
                    <h4 class="card-title">@contenu.Category</h4>
                    <p class="card-text" style="text-align:left !important">@Html.Raw(contenu.Content)</p>

                </div>
                <div class="card-footer text-muted ">
                    <p class="mb-0">
                        <!-- Default unchecked -->
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="@chkId" onchange="deroule(@i)">
                            <label class="custom-control-label" id="@($"lblCharte{i}")" for="@chkId">J'ai lu et j'accepte</label>
                        </div>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
<div class="row" id="divInscription" style="display:none">
    <div class="col-sm-12">
        <div class="card text-center" >
            <div class="card-header success-color white-text">
                Finalisons ton inscription
            </div>
            <div class="card-body">
                <form method="post" asp-action="SignInMeetup" asp-controller="Home" id="meetup-form">
                    <div class="form-row">
                        <div class="col">
                            <div class="md-form">
                                <input type="text" class="form-control" maxlength="50" id="inputFirstName" name="firstName">
                                <label for="inputFirstName">Prénom</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="md-form">
                                <input type="text" required maxlength="50" class="form-control" id="inputName" name="name">
                                <label for="inputName">Nom</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <div class="md-form">
                                <input type="email" required maxlength="50" class="form-control" id="inputEmail" name="email">
                                <label for="inputEmail">Email</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="md-form">
                                <input type="text" class="form-control" id="inputPhone" name="phoneNumber">
                                <label for="inputPhone">Téléphone</label>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="@nameof(SigninMeetupModel.MeetupId)" value="@Model.Rencontre.Id" />
                </form>

            </div>
            <div id ="divBtnSignin" class="card-footer text-muted success-color white-text">
                <a class="btn btn-success"onclick="document.getElementById('meetup-form').submit();">Je m'inscris</a>
            </div>
        </div>
    </div>
</div>
    @section Scripts
    {
        <script>

            function deroule(i) {
                $("#Accepte" + i).prop("disabled", true);
                $("#lblCharte" + i).html("J'ai accepté");
                $("#lblCharte" + i).css('text-decoration', 'underline');
                var next = $("#divCharte" + (i + 1));
                if (next.length == 0) {
                    next = $("#divInscription");
                }
                next.show();
                $('html, body').animate({
                        scrollTop: next.offset().top
                    },
                    2000);
            }
        
        </script>
    }
